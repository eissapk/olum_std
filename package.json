{
  "name": "olum-std",
  "version": "0.1.2",
  "private": true,
  "description": "The VanillaJS developerâ€™s platform.",
  "main": "tasks",
  "scripts": {
    "dev": "gulp dev --require babel-polyfill --require @babel/register --gulpfile tasks",
    "build": "gulp build --require babel-polyfill --require @babel/register --gulpfile tasks"
  },
  "keywords": [
    "olum",
    "olumjs",
    "vanilla",
    "spa"
  ],
  "author": "Eissa Saber",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^3.0.0",
    "colors": "^1.4.0",
    "commander": "^7.2.0",
    "css-loader": "^5.0.1",
    "cssnano": "^5.0.6",
    "decompress": "^4.2.1",
    "fs-extra": "^9.1.0",
    "gulp": "^4.0.0",
    "gulp-connect": "^5.7.0",
    "html-webpack-plugin": "^5.3.1",
    "inquirer": "^8.1.2",
    "postcss": "^8.3.5",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.5.0",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.1.5"
  },
  "dependencies": {
    "marked": "^2.1.3",
    "olum-helpers": "^0.1.0"
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not dead"
  ],
  "babel": {
    "presets": ["@babel/preset-env"],
    "plugins": [
      ["@babel/plugin-proposal-class-properties"], "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "olum": {
    "dest": "build",
    "src": ".pre-build",
    "port": 8000,
    "livereload": true,
    "fallback": "/",
    "comments": false,
    "hash": 5,
    "title": "My Note",
    "asyncAwait": true,
    "https": false,
    "favicon": "./public/favicon.png",
    "template": "./public/index.html",
    "serviceWorker": false,
    "manifest": {
      "name": "My Note - Progressive Web App",
      "short_name": "My Note",
      "description": "Advanced todo app with markdown editor",
      "background_color": "#ffffff",
      "publicPath": "./",
      "display": "standalone",
      "orientation": "any",
      "start_url": "index.html",
      "theme_color": "#ffffff",
      "icons": [{
        "src": "./public/manifest.png",
        "sizes": [
          96,
          128,
          192,
          256,
          384,
          512
        ]
      }]
    }
  }
}