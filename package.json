{
  "name": "olum-std",
  "version": "0.3.0",
  "private": true,
  "description": "The VanillaJS developerâ€™s platform.",
  "main": "index.js",
  "scripts": {
    "dev": "olum-compiler dev",
    "build": "olum-compiler build"
  },
  "dependencies": {
    "marked": "^3.0.7",
    "olum": "git+https://github.com/olumjs/olum.git",
    "olum-helpers": "git+https://github.com/olumjs/olum-helpers.git",
    "olum-router": "git+https://github.com/olumjs/olum-router.git"
  },
  "devDependencies": {
    "olum-compiler": "git+https://github.com/olumjs/olum-compiler.git"
  },
  "keywords": [
    "olum",
    "olumjs",
    "vanilla",
    "spa"
  ],
  "author": "Eissa Saber",
  "license": "MIT",
  "olum": {
    "port": 8000,
    "livereload": true,
    "fallback": "/",
    "comments": false,
    "hash": 5,
    "title": "My Note",
    "polyfill": false,
    "assetAsModule": true,
    "https": false,
    "favicon": "./public/favicon.png",
    "template": "./public/index.html",
    "serviceWorker": false,
    "manifest": {
      "name": "My Note - Progressive Web App",
      "short_name": "My Note",
      "description": "Advanced todo app with markdown editor",
      "background_color": "#ffffff",
      "publicPath": "./",
      "display": "standalone",
      "orientation": "any",
      "start_url": "index.html",
      "theme_color": "#ffffff",
      "icons": [
        {
          "src": "./public/manifest.png",
          "sizes": [
            96,
            128,
            192,
            256,
            384,
            512
          ]
        }
      ]
    }
  }
